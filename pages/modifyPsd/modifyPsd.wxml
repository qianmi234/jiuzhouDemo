<!--pages/modifyPsd/modifyPsd.wxml-->
<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<view class="container">
  <view class="shopContainer">
    <view class="shopNull" style="height:{{height}}px;"></view>
    <view class="loginList">
      <view class="loginTel">
        <input bindinput="changeCurPsd" class="loginInput" placeholder-class="phcolor" password type="text" placeholder="请输入当前密码" value="{{curPsd}}" />
      </view>
    </view>
    <view class="loginList">
      <view class="loginTel">
        <input bindinput="changeNewPsd" class="loginInput" placeholder-class="phcolor" password type="text" placeholder="请输入新密码" value="{{newPsd}}"/>
      </view>
    </view>
    <view class="loginList">
      <view class="loginTel">
        <input bindinput="changeAgainPsd" class="loginInput" placeholder-class="phcolor" password type="text" placeholder="再次输入新密码" value="{{againPsd}}"/>
      </view>
    </view>
    <view class="loginList">
      <view bindtap="modifySubmit" class="loginButton">确定</view>
    </view>
  </view>
</view>
