/* pages/businessesDetail/businessesDetail.wxss */
.shopContainer{
  position: absolute;
  background-color: #f2f2f2;
  width: 100%;
  min-height: 100%;
  overflow-x: hidden;
}
.shopInfo{
  height: 300rpx;
  width: 100%;
  background: -webkit-linear-gradient(left,#EC6659,#EC775A);
}
.infoContent{
  position: absolute;
  height: 110rpx;
  width: 100%;
}
.infoContent .imageInfo{
  width: 110rpx;
  height: 110rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
  float: left;
}
.infoContent .shopName{
  position: relative;
  color: #fff;
  font-size: 32rpx;
  top: 50rpx;
  left: 20rpx;
  display: block;
}
.infoContent .shopTel{
  position: relative;
  top: 60rpx;
  left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.infoContent .shopTel text{
  color: #fff;
  font-size: 28rpx;
}
.mrLeft20{
  margin-left: 20rpx;
}
.infoContent .shopTel .telImage{
  width: 48rpx;
  height: 41rpx;
  display: inline-block;
  margin-left: 30rpx;
}
.companyInfo{
  position: relative;
  width: 690rpx;
  min-height: 160rpx;
  border-radius: 10rpx;
  background-color: #fff;
  top: -70rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 auto;
  z-index: 999;
}
.companyHead{
  height: 92rpx;
  color: #333;
  font-size: 32rpx;
  border-bottom: 1px solid #f2f2f2;
  line-height: 92rpx;
  width: 100%;
}
.companyHead text{
  margin-left: 30rpx;
  font-weight: 700;
}
.companyContent{
  height: 70rpx;
  line-height: 70rpx;
  text-align: left;
}
.companyContent .firstListText{
  position: absolute;
  color: #333;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.companyContent .lastListText{
  position: absolute;
  right: 30rpx;
  color: #999;
  font-size: 28rpx;
}
.mrTop30{
  margin-top: 30rpx;
}
.boxShadow{
 box-shadow: 0rpx 10rpx 10rpx 10rpx rgba(165,169,184,0.5);
}