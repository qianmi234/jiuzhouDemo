/* pages/dealList/dealList.wxss */
.shopContainer{
  position: absolute;
  background-color: #f2f2f2;
  width: 100%;
  min-height: 100%;
  padding-bottom: 30rpx;
  z-index: 8;
}
.shopNum{
  height: 98rpx;
  width: 100%;
  background-color: #fff;
  line-height: 98rpx;
  text-align: left;
}
.shopNum .title{
  color: #999;
  font-size: 30rpx;
  margin-left:30rpx;
}
.shopNum .number{
  position:absolute;
  right: 30rpx;
  color: #333;
  font-size: 30rpx;
}
.shopSearch{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 148rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.searchContent{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 10rpx;
}
.searchContent input{
  width: 600rpx;
  height: 86rpx;
  border-radius: 10rpx;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding-left: 20rpx;
  -webkit-border-top-right-radius:0rpx;
  -webkit-border-bottom-right-radius:0rpx;
}
.searchIcon{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 88rpx;
  height: 90rpx;
  background: -webkit-linear-gradient(left,#EC6659,#EC775A); 
  -webkit-border-top-right-radius:10rpx;
  -webkit-border-bottom-right-radius:10rpx;
}
.searchIcon image{
  width: 48rpx;
  height: 48rpx;
}
.shopList{
  border-top: 1rpx solid #eee;
  width: 100%;
  background-color: #fff;
  height: 150rpx;
}
.listContent{
  height: 150rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.listContent .firstListText{
  color: #333;
  font-size: 30rpx;
  margin-left: 30rpx;
  text-align: right;
  min-width: 120rpx;
}
.listContent .lastListText{
  position: absolute;
  right: 80rpx;
  text-align: right;
}
.listContent .lastListText .price{
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
}
.listContent .lastListText .total{
  color: #999;
  font-size: 26rpx;
}
.listContent .fontWeight{
  color:#333;
  font-weight: 700;
}
.noData{
  color: #999;
  min-height: 600rpx;
  line-height: 600rpx;
  text-align: center;
}
.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 30rpx;
  transform: rotate(45deg);
  display: inline-block;
}