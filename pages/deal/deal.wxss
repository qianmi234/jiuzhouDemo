/* pages/deal/deal.wxss */
.shopContainer{
  position: absolute;
  background-color: #fff;
  width: 100%;
  min-height: 100%;
  overflow-x: hidden;
}
.dealInfo{
  height: 250rpx;
  width: 100%;
  background: -webkit-linear-gradient(left,#EC6659,#EC775A);
}
.dealContent{
  position: absolute;
  height: 110rpx;
  width: 100%;
}
.dealContent .imageInfo{
  width: 110rpx;
  height: 110rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
  float: left;
}
.dealContent .shopName{
  position: relative;
  color: #fff;
  font-size: 32rpx;
  top: 50rpx;
  left: 20rpx;
  display: block;
}
.dealContent .shopTel{
  position: relative;
  top: 60rpx;
  left: 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.dealContent .shopTel text{
  color: #fff;
  font-size: 28rpx;
}
.mrLeft20{
  margin-left: 20rpx;
}
.dealContent .shopTel .telImage{
  width: 48rpx;
  height: 41rpx;
  display: inline-block;
  margin-left: 30rpx;
}
.dealDateList{
  position: relative;
  width: 100%;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.dealDate{
  width: 688rpx;
  border:1px solid #ec6348;
  height: 60rpx;
  border-radius: 8rpx;
}
.dealDate text{
  display:inline-block;
  width: 50%;
  line-height: 60rpx;
  text-align: center;
  color:#ec6348;
  font-size: 26rpx;
}
.dealDate text.active{
  background-color: #ec6348;
  color: #fff;
}
.companyHead{
  height: 120rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 120rpx;
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f2f2f2;
}
.dateSelect{
  width: 690rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.dateSelect text{
  color: #999;
  font-size: 30rpx;
}
.dateSelect .dateStart{
  margin-left: 30rpx;
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 15rpx;
}
.dateSelect .dateEnd{
  margin-left: 15rpx;
  width: 200rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
}
.dateSelect .dateSearch{
  position: absolute;
  right: 30rpx;
  color: #f6be41;
  font-size: 30rpx;
}
.dateSelect .monthStart{
  margin-left: 30rpx;
  width: 400rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: left;
  padding-left: 10rpx;
}
.dateContent{

}
.dateHead{
  height: 84rpx;
  line-height: 84rpx;
  text-align: left;
  background-color: #fff;
  border-bottom: 1rpx solid #f2f2f2;
}
.dateHead .firstListText{
  position: absolute;
  color: #999;
  font-size: 26rpx;
  margin-left: 30rpx;
}
.dateHead .lastListText{
  position: absolute;
  right: 30rpx;
  color: #999;
  font-size: 26rpx;
}
.dateList{
  height: 84rpx;
  line-height: 84rpx;
  text-align: left;
  border-bottom: 1rpx solid #f2f2f2;
}
.dateList .firstDate{
  color: #999;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.dateList .lastDate{
  position: absolute;
  right: 30rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: 700;
}
.mrTop30{
  margin-top: 30rpx;
}