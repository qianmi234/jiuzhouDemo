/* navbar.wxss */

/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  /* display: none; */
  position: fixed;
  width: 100%;
  top: 0;
  background: #fff;
  color: #000;
  z-index: 9999999;
  background: #EC6659;
  overflow: hidden;
}
/* 背景图 */
.backgroundimg {
  position: absolute;
  z-index: 1;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 450;
  z-index: 2;
}

.nav-capsule {
  display: flex;
  align-items: center;
  width: 140rpx;
  justify-content: space-between;
  height: 100%;
}
.leftArrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #fff;
  border-right: 2px solid #fff;
  position: absolute;
  transform: rotate(-135deg);
  margin-left: 32rpx;
  display: inline-block;
}
.back-pre {
  width: 32rpx;
  height: 36rpx;
  margin-top: 4rpx;
  padding: 10rpx;
}
.nav-capsule {
  width: 136rpx;
  height: 40rpx;
  margin-top: 3rpx;
  z-index: 99;
}
.zIndex{
  z-index: 9;
  width: 300rpx;
  display: block;
}